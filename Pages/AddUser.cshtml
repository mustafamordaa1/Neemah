@page
@model Neemah.Pages.AddUserModel
@{
    ViewData["Title"] = "Add New User";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h3 class="mb-4 text-center">➕ Add New User</h3>

            <form method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="NewUser.Username" class="form-label">Username</label>
                    <input asp-for="NewUser.Username" class="form-control" placeholder="Enter username" required />
                    <span asp-validation-for="NewUser.Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewUser.Password" class="form-label">Password</label>
                    <input asp-for="NewUser.Password" class="form-control" placeholder="Enter password" type="password" required />
                    <span asp-validation-for="NewUser.Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="NewUser.UserType" class="form-label">User Type</label>
                    <select asp-for="NewUser.UserType" class="form-select" required>
                        <option value="">Select user type</option>
                        <option value="Admin">👨‍💼 مشرف</option>
                        <option value="User1">🏢 صاحب الفرع</option>
                        <option value="User2">🍗 صاحب التتبيل</option>
                    </select>
                    <span asp-validation-for="NewUser.UserType" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
            </form>

            @if (Model.Message != null)
            {
                <div class="alert alert-success mt-4">@Model.Message</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
