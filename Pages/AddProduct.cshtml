@page
@model Neemah.Pages.AddProductModel
@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">âž• Add New Product</h2>

    <form method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Item Name (Arabic)</label>
            <input class="form-control" name="ItemNameArabic" type="text" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Item Name (English)</label>
            <input class="form-control" name="ItemNameEnglish" type="text" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Serial Number (SN)</label>
            <input class="form-control" name="SN" type="text" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Unit</label>
            <input class="form-control" name="Unit" type="text" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Raw Materials</label>
            <input class="form-control" name="RawMaterials" type="number" step="any" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Additions</label>
            <input class="form-control" name="Additions" type="number" step="any" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Spices Weight</label>
            <input class="form-control" name="SpicesWeight" type="number" step="any" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Salt Weight</label>
            <input class="form-control" name="SaltWeight" type="number" step="any" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Plate Weight</label>
            <input class="form-control" name="PlateWeight" type="number" step="any" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">Image</label>
            <input type="file" class="form-control" name="ImageFile" accept="image/*" />
        </div>

        <div class="col-12 text-center mt-3">
            <button type="submit" class="btn btn-primary px-4">Add Product</button>
        </div>
    </form>
</div>
