@page
@model LoginModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card p-4 shadow-lg rounded">
        <!-- Logo Section -->
        <div class="text-center mb-4">
            <img src="~/logo.png" alt="Logo" class="img-fluid" style="max-width: 50px;" />
        </div>

        <h2 class="text-center mb-4 font-weight-bold">Welcome Back!</h2>
        
        <form method="post">
            <div class="form-group">
                <label for="Username" class="sr-only">Username</label>
                <input type="text" class="form-control form-control-lg" asp-for="Username" placeholder="Username" required />
            </div>

            <div class="form-group">
                <label for="Password" class="sr-only">Password</label>
                <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">Login</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-4 p-2 text-center">
                @Model.ErrorMessage
            </div>
        }
    </div>
</div>
