@page
@model Neemah.Pages.AddFactoryOrderModel
@{
    ViewData["Title"] = "Add Factory Orders";
}

<div class="container my-4">
    <h2 class="text-center mb-4">ðŸ“¦ Add New Factory Orders</h2>

    <form method="post">
        <!-- Branch & Date -->
        <div class="row mb-4 gx-3">
            <div class="col-md-6">
                <label asp-for="Branch" class="form-label">ðŸ§­ Branch</label>
                <select asp-for="Branch" class="form-select" id="Branch">
                    <option value="QATIF">QATIF</option>
                    <option value="shubili">shubili</option>
                    <option value="SHATI">SHATI</option>
                    <option value="TARUT">TARUT</option>
                    <option value="SAIHAT">SAIHAT</option>
                    <option value="HADLA">HADLA</option>
                </select>
            </div>

            <div class="col-md-6">
                <label asp-for="Date" class="form-label">ðŸ“… Date</label>
                <input asp-for="Date" type="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <!-- Product Cards -->
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@product.ImagePath" class="card-img-top" alt="@product.ItemNameEnglish" style="height: 180px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@product.ItemNameEnglish</h5>
                            <h6 class="text-muted text-truncate">@product.ItemNameArabic</h6>
                            <p class="mb-2 small text-secondary">SN: @product.SN</p>

                            <!-- Order -->
                            <div class="mb-2">
                                <label for="Order_@product.Id" class="form-label small">Order</label>
                                <input type="number" name="Order_@product.Id" id="Order_@product.Id" class="form-control form-control-sm" min="0" value="0" />
                            </div>

                            <!-- Stock -->
                            <div>
                                <label for="Stock_@product.Id" class="form-label small">Stock</label>
                                <input type="number" name="Stock_@product.Id" id="Stock_@product.Id" class="form-control form-control-sm" min="0" value="0" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-5 py-2">âœ… Submit Orders</button>
        </div>
    </form>
</div>
